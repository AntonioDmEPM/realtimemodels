{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,  // TODO: Enable incrementally
    "noUnusedLocals": true,  // Enabled: Helps identify dead code
    "noUnusedParameters": false,  // TODO: Enable after refactoring
    "noImplicitAny": true,  // Enabled: Important for type safety
    "noFallthroughCasesInSwitch": true,  // Enabled: Prevents common bugs
    "forceConsistentCasingInFileNames": true,  // Enabled: Prevents cross-platform issues
    "noImplicitReturns": true,  // Enabled: Ensures all code paths return

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
